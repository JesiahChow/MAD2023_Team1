<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateEmail">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_margin="15dp"
            android:id="@+id/email_relative">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email_content"
                android:layout_marginTop="59dp"
                android:text="You can update your email address here.
Please verify your email and password before continuing."
                android:textAlignment="center"
                android:textSize="20sp"
                android:padding="2dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/update_email"
                android:layout_below="@+id/email_content"
                android:text="Current Email"
                android:layout_marginTop="50dp"
                android:padding="6dp"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/current_email"
                android:layout_width="371dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/update_email"
                android:layout_marginTop="0dp"
                android:ems="10"
                android:background="#ECECEC"
                android:padding="15dp"
                android:hint="Enter your current email"
                android:inputType="textEmailAddress" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/password_text"
                android:layout_below="@+id/update_email"
                android:text="Password"
                android:layout_marginTop="50dp"
                android:padding="6dp"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/current_password"
                android:layout_width="371dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password_text"
                android:layout_marginTop="0dp"
                android:padding="15dp"
                android:background="#ECECEC"
                android:ems="10"
                android:hint="Enter your current password"
                android:inputType="textPassword" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/authenticate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_design"
                android:layout_below="@id/current_password"
                android:text="Authenticate"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="120dp"
                android:padding="5dp"
                android:textColor="@color/white" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_relative"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="@color/white"
            android:padding="3dp">

            <TextView
                android:id="@+id/new_email_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="1dp"
                android:padding="6dp"
                android:text="Your profile is not authenticated yet!"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/email_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/new_email_text"
                android:layout_marginTop="5dp"
                android:padding="6dp"
                android:text="New Email"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/new_email"
                android:layout_width="369dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email_text"
                android:layout_marginTop="0dp"
                android:padding="15dp"
                android:background="#ECECEC"
                android:ems="10"
                android:hint="Enter your new email"
                android:inputType="textEmailAddress" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/change_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/new_email"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_design"
                android:padding="5dp"
                android:text="Update Email"
                android:textColor="@color/white" />

        </RelativeLayout>
    </RelativeLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/email_toolbar"
        android:layout_width="412dp"
        android:layout_height="46dp"
        android:background="#FDE7A5"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</RelativeLayout>