<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/busStopCodeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="Bus Stop Number"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="150dp" />

    <TextView
        android:id="@+id/serviceNoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bus No"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="87dp" />

    <TextView
        android:id="@+id/nextBusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Bus"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="87dp" />

    <TextView
        android:id="@+id/nextBus2TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2nd Bus"
        tools:layout_editor_absoluteX="238dp"
        tools:layout_editor_absoluteY="87dp" />

    <TextView
        android:id="@+id/nextBus3TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3rd Bus"
        tools:layout_editor_absoluteX="325dp"
        tools:layout_editor_absoluteY="87dp" />
</androidx.constraintlayout.widget.ConstraintLayout>