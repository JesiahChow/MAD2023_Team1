<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Image View (Background) -->

    <!-- Text Views and RatingBar (On Top of Image) -->

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="174dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/thumbnail_roundedge"
        android:contentDescription="Activity Image"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/programmeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageView"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerVertical="true"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="12dp"
        android:shadowColor="@color/black"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="Activity Title"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="230dp"
        android:layout_height="42dp"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="-42dp"
        android:isIndicator="true"
        android:numStars="5"
        android:progressTint="#FFC107"
        android:rating="0"
        android:scaleX="0.35"
        android:scaleY="0.35"
        android:shadowColor="@color/black"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6" />

    <TextView
        android:id="@+id/ratingCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignBottom="@+id/ratingBar"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="13dp"
        android:text="0.0"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:shadowColor="@color/black"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"/>

    <TextView
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/programmeTitle"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="10dp"
        android:shadowColor="@color/black"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text="Category"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="italic"/>

</RelativeLayout>
